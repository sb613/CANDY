minetest.register_craft({
        output = "lollipop 5",
        recipe = {
                {'', '', ''},
                {'', 'default:torch', ''},
                {'', 'farming:wheat', ''},
        }
})--To craft five lollipops you will need one wheat, one torch, and____.
print("mod lollipop Loaded!")
